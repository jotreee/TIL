<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow>
        <EditText
            android:layout_span="5"
            android:id="@+id/num1"
            android:hint="숫자1"/>

        <TableRow>

            <Button
                android:id="@+id/btn0"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="0" />

            <Button
                android:id="@+id/btn1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                android:layout_margin="5dp"
                android:backgroundTint="@color/purple_200"
                android:text="4" />
        </TableRow>

    </TableRow>

    <TableRow>

        <EditText
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="5"
            android:hint="숫자2" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/btn5"
            android:text="5"/>
        <Button
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/btn6"
            android:text="6"/>
        <Button
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/btn7"
            android:text="7"/>
        <Button
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/btn8"
            android:text="8"/>
        <Button
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/btn9"
            android:text="9"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:backgroundTint="#FC8686"
            android:id="@+id/plus"
            android:text="+" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:backgroundTint="#FC8686"
            android:id="@+id/minus"
            android:text="-" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:backgroundTint="#FC8686"
            android:id="@+id/multiple"
            android:text="*" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span="5"
            android:backgroundTint="#FC8686"
            android:id="@+id/divide"
            android:text="/" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_span="2"
            android:id="@+id/result"
            android:textSize="30sp"
            android:textColor="#FF0000"
    </TableRow>

</TableLayout>